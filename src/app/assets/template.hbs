@font-face {
    font-family: iconfont;
    src: url("../fonts/iconfont.eot");src: url("../fonts/iconfont.eot#iefix") format("embedded-opentype"),
             url("../fonts/iconfont.woff2") format("woff2"),
             url("../fonts/iconfont.woff") format("woff"),
             url("../fonts/iconfont.ttf") format("truetype");
}

%{{ cssPrefix }}-base {
    font-family: "{{ fontName }}";
}

@mixin {{ cssPrefix }}-base {
    font-family: "{{ fontName }}";
}

@function iconfont-char($name){
    $char: "";
{% for glyph in glyphs %}
    @if $name == {{ glyph.name }} {
        $char:"\{{ glyph.unicode[0].charCodeAt(0).toString(16) }}";
    }
{% endfor %}
    @return $char;
}